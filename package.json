  "bugs": {
    "url": "https://github.com/MarleeG/basic-react-template/issues"
  },
  "homepage": "https://github.com/MarleeG/basic-react-template#readme",
  "dependencies": {
    "concurrently": "^6.2.0",
    "express": "^4.17.1",
    "if-env": "^1.0.4",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "nodemon": "^2.0.7"
  }
}
